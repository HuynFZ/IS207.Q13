# -----------------------------------------
# Database Configuration
# -----------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=admin
DB_PASSWORD=secret

# -----------------------------------------
# MySQL Container Configuration
# -----------------------------------------
MYSQL_DATABASE=laravel
MYSQL_USER=admin
MYSQL_PASSWORD=secret
MYSQL_ROOT_PASSWORD=root
MYSQL_PORT=3306

# -----------------------------------------
# Charset & Collation (UTF-8 full support)
# -----------------------------------------
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# -----------------------------------------
# Frontend port and Vite API link
# -----------------------------------------
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:8000/api

# -----------------------------------------
# Laravel port and configuration
# -----------------------------------------
APP_ENV=local
APP_DEBUG=true
LARAVEL_PORT=8000